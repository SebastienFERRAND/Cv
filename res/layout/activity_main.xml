<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffdb99"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/profile_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/essai_profil_h_small" />

    <Button
        android:id="@+id/pro_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/profile_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_portrait_small" />

    <Button
        android:id="@+id/education_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/pro_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/education_icon_small" />

    <Button
        android:id="@+id/skills_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/education_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/skill_icon_small" />

    <Button
        android:id="@+id/project_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/skills_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/project_icon_small" />

    <Button
        android:id="@+id/langue_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/project_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/map_icon_small" />

    <Button
        android:id="@+id/loisir_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/langue_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/dice_small" />

    <ImageView
        android:id="@+id/bubble_1"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/profile_button"
        android:background="@drawable/bubble_start" />

    <ImageView
        android:id="@+id/bubble_2"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bubble_1"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/profile_button"
        android:background="@drawable/bubble_start"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bubble_3"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bubble_2"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/profile_button"
        android:background="@drawable/bubble_start"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bubble_4"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bubble_3"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/profile_button"
        android:background="@drawable/bubble_start"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bubble_5"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bubble_4"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/profile_button"
        android:background="@drawable/bubble_start"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bubble_6"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bubble_5"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/profile_button"
        android:background="@drawable/bubble_start"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bubble_7"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bubble_6"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/profile_button"
        android:background="@drawable/bubble_start"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/bubble_1"
        android:background="@drawable/bubble_new"
        android:padding="20dp" >

        <TextView
            android:id="@+id/title"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_profile"
            android:textColor="#ffa500"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/self_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/self_description"
            android:layout_marginTop="30dp"
            android:src="@drawable/map_better"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/map"
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:dividerHeight="0dp" >
        </ListView>
    </RelativeLayout>
    <!--
        <ImageView
            android:id="@+id/pull_up_page"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignP8arentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/page_turn_new"
            android:layout_marginBottom="250dp" />
    -->

</RelativeLayout>